<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.main.RegisterController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
        <HBox spacing="10.0" alignment="CENTER">
            <Label text="Username:"/>
            <TextField fx:id="username"/>
        </HBox>
        <HBox spacing="10.0" alignment="CENTER">
            <Label text="Password:"/>
            <PasswordField fx:id="password"/>
        </HBox>
        <HBox spacing="10.0" alignment="CENTER">
            <Label text="First name:"/>
            <TextField fx:id="fName"/>
        </HBox>
        <HBox spacing="10.0" alignment="CENTER">
            <Label text="Surname:"/>
            <TextField fx:id="lName"/>
        </HBox>
        <HBox spacing="10.0" alignment="CENTER">
            <Label text="Teacher account?"/>
            <CheckBox fx:id="isTeacherCheck"/>
        </HBox>
    </VBox>

    <HBox spacing="8.0" alignment="CENTER">
        <padding>
            <Insets left="50.0"/>
        </padding>
        <Button fx:id="registerButton" text="Register" onAction="#onRegisterButtonClick"/>
    </HBox>

    <Label fx:id="statusLabel"/>
</VBox>
